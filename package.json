    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "openpgp": "^5.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "bun-types": "^1.3.6",
    "typescript": "^5.3.3"
  }
}
{
  "name": "tui-pgp",
  "version": "1.0.0",
  "description": "A Terminal UI for PGP encryption and key management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "tui-pgp": "./dist/index.js"
  },
  "scripts": {
